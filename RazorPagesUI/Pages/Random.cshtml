@page
@model RazorPagesUI.Pages.RandomModel
@{
    ViewData["Title"] = "Random";
}

<div class="text-center mb-5">
    <h2 class="display-4">Search for random</h2>
    <h1 class="display-4 text-warning font-weight-bold">CHUCK NORRIS JOKES</h1>
</div>

<div class="card d-flex border-warning" style="height: 200px">
    <div class="card-header">
        <h3>Random Joke</h3>
    </div>
    <div class="card-body d-flex align-items-center justify-content-center text-center">
        <div class="card-text">
            @Model.RandomJoke
        </div>
    </div>
</div>
<br />
<div class="d-flex justify-content-center">
    <a class="btn btn-warning" asp-page="/Random">Random Joke</a>
</div>

